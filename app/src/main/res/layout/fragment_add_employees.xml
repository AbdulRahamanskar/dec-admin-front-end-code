<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_bgcolor"
    tools:context=".Fragments.AddEmployeesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25sp"
            android:fontFamily="@font/lemon"
            android:gravity="center"
            android:text="Add employee details here"
            android:textSize="22sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Employee Id"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_gravity="center"
            android:gravity="center"
            app:startIconScaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/cut_style"
            app:startIconMinSize="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            app:boxStrokeWidth="2dp"
            app:boxStrokeColor="@color/blue"
            app:hintTextColor="@color/bottom_bg_color"
            app:hintTextAppearance="@color/bottom_bg_color"
            app:hintAnimationEnabled="true"
            android:textColorHint="@color/bottom_bg_color"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:hintEnabled="true"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etIdAddEmp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPhonetic"
                android:drawablePadding="5dp"
                android:drawableTint="@color/bottom_bg_color"
                android:drawableStart="@drawable/id_card"
                android:textColorHint="@color/bottom_bg_color"
                android:textColor="@color/bottom_bg_color"

                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_gravity="center"
            android:gravity="center"
            app:shapeAppearanceOverlay="@style/cut_style"
            app:startIconMinSize="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:boxStrokeWidth="2dp"
            app:boxStrokeColor="@color/blue"
            app:hintTextColor="@color/bottom_bg_color"
            app:hintTextAppearance="@color/bottom_bg_color"
            app:hintAnimationEnabled="true"
            android:textColorHint="@color/bottom_bg_color"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:hintEnabled="true"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNameAddEmp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:drawablePadding="5dp"
                android:drawableTint="@color/bottom_bg_color"
                android:drawableStart="@drawable/baseline_person_24"
                android:textColorHint="@color/bottom_bg_color"
                android:textColor="@color/bottom_bg_color"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_gravity="center"
            android:gravity="center"
            app:shapeAppearanceOverlay="@style/cut_style"
            app:startIconMinSize="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:boxStrokeWidth="2dp"
            app:boxStrokeColor="@color/blue"
            app:hintTextColor="@color/bottom_bg_color"
            app:hintTextAppearance="@color/bottom_bg_color"
            app:hintAnimationEnabled="true"
            android:textColorHint="@color/bottom_bg_color"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:hintEnabled="true"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMobileNumAddEmp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:drawablePadding="5dp"
                android:drawableTint="@color/bottom_bg_color"
                android:drawableStart="@drawable/baseline_smartphone_24"
                 android:textColorHint="@color/bottom_bg_color"
                android:textColor="@color/bottom_bg_color"/>
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Office Email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_gravity="center"
            android:gravity="center"
            app:shapeAppearanceOverlay="@style/cut_style"
            app:startIconMinSize="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:boxStrokeWidth="2dp"
            app:boxStrokeColor="@color/blue"
            app:hintTextColor="@color/bottom_bg_color"
            app:hintTextAppearance="@color/bottom_bg_color"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            android:textColorHint="@color/bottom_bg_color"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmailAddEmp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:drawablePadding="5dp"
                android:textColor="@color/bottom_bg_color"
                android:drawableTint="@color/bottom_bg_color"
                android:drawableStart="@drawable/baseline_email_24"
                android:textColorHint="@color/bottom_bg_color"

                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_gravity="center"
            android:gravity="center"
            app:shapeAppearanceOverlay="@style/cut_style"
            app:startIconMinSize="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/bottom_bg_color"
            app:boxStrokeWidth="2dp"
            app:boxStrokeColor="@color/blue"
            app:hintTextColor="@color/bottom_bg_color"
            app:hintTextAppearance="@color/bottom_bg_color"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            android:textColorHint="@color/bottom_bg_color"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPasswordAddEmp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:drawablePadding="5dp"
                android:drawableTint="@color/bottom_bg_color"
                android:drawableStart="@drawable/baseline_lock_24"
                android:textColorHint="@color/bottom_bg_color"
                android:textColor="@color/bottom_bg_color"
                />
        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="@color/bottom_bg_color"
            android:layout_marginLeft="30dp"
            android:text="Choose employee position"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilForPosition"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_gravity="center"
            android:gravity="center"
            app:shapeAppearanceOverlay="@style/cut_style"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            app:boxStrokeWidth="2dp"
            app:boxStrokeColor="@color/blue"
            app:hintTextColor="@color/bottom_bg_color"
            app:hintTextAppearance="@color/bottom_bg_color"
            android:textColorHint="@color/bottom_bg_color"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:endIconTint="@color/bottom_bg_color">
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/autoCompleteListofposition"
                android:text="Select Employee Position"
                android:contextClickable="true"
                android:drawablePadding="5dp"
                android:inputType="none"
                android:layout_marginBottom="0dp"
                android:textColor="@color/bottom_bg_color"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnEmpDB"
            android:text="Add to database"
            android:elevation="10dp"
            android:textColor="@color/white"
            android:background="@drawable/button_bg"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"/>

    </LinearLayout>


</LinearLayout>